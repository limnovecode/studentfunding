= form_for([:adminboard, @store]) do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :percentage
    = f.text_field :percentage
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
