= form_for([:schoolboard, @receipt]) do |f|
  - if @receipt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@receipt.errors.count, "error")} prohibited this receipt from being saved:"
      %ul
        - @receipt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :store
    = f.collection_select :store_id, Store.order(:title),:id,:title, include_blank: false
  .field
    = f.label :reference
    = f.text_field :reference
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
